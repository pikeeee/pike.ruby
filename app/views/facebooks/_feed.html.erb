<div class="column is-half">
	<% if user_signed_in? %>
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
				<img src="https://bulma.io/images/placeholders/128x128.png">
			</p>
		</figure>
		<div class="media-content">
			<%= render 'form' %>
		</div>
	</article>
	<%end%>



<% @facebooks.each do | facebook | %>
<div class="box">
  	<article class="media">
  		<div class="media-left">
  			<figure class="image is-64x64">
  				<img src="https://bulma.io/images/placeholders/128x128.png">
  			</figure>
  		</div>
  		<div class="media-content">
  			<div class="content">
  				<strong><%= facebook.user.name %></strong><br />
  				<small><%= facebook.user.username %></small><br/>
  				<p><%= facebook.facebook %></p>
  			</div>

  			<% if user_signed_in? %>
  			<nav class="level">
  				<div class="level-left is-mobile">
				  <div>
				  <%= @facebook.comment.each do |comment| %>
				  <p><%= comment.comment %></p>
				  <% end %>
				  </div>
				  
  					<%= link_to facebook, class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to edit_facebook_path(facebook), class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
						<% end %>
					<%= link_to edit_facebook_path(facebook), class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-comments-o" aria-hidden="true"></i></span>
						
  					<% end %>
  					<%= button_to facebook, method: :delete, data: { confirm: "Are you sure you want to delete this facebook?" } do %>
  							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
  					<% end %>
					  <div class ="comment-box">					  
					  <%= form_for @comment do |f| %>
					  <%= f.hidden_field :facebook, value: facebook %>
					  <%= f.text_field :comment, placeholder: "add comment here..." %>
					  <%= f.submit "Post", class: "btn btn-success float-right" %>
					  <% end %>
					  </div>
  				</div>
  			</nav>
  			<%end%>
  			</div>
  	</article>
  </div>
  </div>
  <% end %>